{
  "name": "@scottobert/roman-numerals",
  "version": "1.0.0",
  "description": "Utility functions for working with Roman Numerals",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist/**/*.{js,map,d.ts}"
  ],
  "scripts": {
    "test": "nyc mocha",
    "build": "tsc",
    "semantic-release": "semantic-release"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scottobert/roman-numerals.git"
  },
  "author": "Scott Obert",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/scottobert/roman-numerals/issues"
  },
  "homepage": "https://github.com/scottobert/roman-numerals#readme",
  "devDependencies": {
    "@jedmao/semantic-release-npm-github-config": "^1.0.9",
    "@types/chai": "^4.3.1",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "semantic-release": "^19.0.2",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  },
  "dependencies": {
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21"
  }
}
