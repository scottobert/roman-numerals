{
  "name": "@scottobert/roman-numerals",
  "version": "1.0.0",
  "description": "Utility functions for working with Roman Numerals",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist/**/*.{js,map,d.ts}"
  ],
  "scripts": {
    "test": "nyc mocha",
    "build": "tsc",
    "semantic-release": "semantic-release"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.x <=24.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scottobert/roman-numerals.git"
  },
  "author": "Scott Obert",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/scottobert/roman-numerals/issues"
  },
  "homepage": "https://github.com/scottobert/roman-numerals#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.27",
    "chai": "^4.5.0",
    "mocha": "^11.7.0",
    "nyc": "^17.1.0",
    "semantic-release": "^24.2.5",
    "semantic-release-github-pullrequest": "^1.3.0",
    "source-map-support": "^0.5.21",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.8.3"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
